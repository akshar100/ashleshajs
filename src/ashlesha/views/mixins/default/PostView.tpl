<script type="text/x-template" id="PostView-main-signed">
	<div class="row post-view-block shadow-box">
		<div class="span1">
			<img src="http://placehold.it/40x40">
		</div>
		<div class="span8">
			<h4>{author_name}</h4>
			<div class="row">
				<div class="span8">
					{post_text}
				</div>
			</div>
			<h6>POSTED ON {created_at}</h6>
			<div class="row">
				<div class="span2"><a href="#">Comments ({comment_count})</a></div>
				<div class="span1"><a href="#"><i class="icon-thumbs-up"></i> Like</a></div>
				<div class="span1"><a href="#"><i class="icon-retweet"></i> Share</a></div>
			</div>
		</div>
	</div>
</script>